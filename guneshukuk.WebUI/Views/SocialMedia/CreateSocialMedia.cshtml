@model CreateSocialMediaDto;
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">SOSYAL MEDYA İŞLEMLERİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Sosyal Medya Bilgi Girişi</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="SocialMediaName">Sosyal Medya Adı Giriniz</label>
								<input type="text" class="form-control" id="ConsultancyTitle" asp-for="SocialMediaName">
							</div>
							<div class="form-group">
								<label for="SocialMediaUrl">Sosyal Medya Hesap Adresi Giriniz</label>
								<input type="text" class="form-control" id="ConsultancyContent" asp-for="SocialMediaUrl">
							</div>
							<div class="form-group">
								<label for="SocialMediaIcon">Sosyal Medya İkonu Yolu Giriniz</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="SocialMediaIcon">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
