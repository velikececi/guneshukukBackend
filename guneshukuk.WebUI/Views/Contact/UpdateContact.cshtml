@model UpdateContactDto;
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İLETİŞİM İŞLEMLERİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgisi Güncelleme İşlemleri</div>
						</div>

						<div class="card-body">
							<input type="hidden" asp-for="ContactId" />
							<div class="form-group">
								<label for="Location">Adres Bilgisi Giriniz</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" id="Phone" asp-for="Phone">
							</div>
							<div class="form-group">
								<label for="Email">E-Posta Adresi Giriniz </label>
								<input type="email" class="form-control" id="Email" asp-for="Email">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Bilgisi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

