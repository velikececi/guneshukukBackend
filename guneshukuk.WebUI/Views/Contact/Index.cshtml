@model List<ResultContactDto>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Adres</th>
									<th scope="col">Telefon</th>
									<th scope="col">E-Posta Adresi</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Contact/CreateContact" class="btn btn-outline-primary"> Yeni İletişim Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
