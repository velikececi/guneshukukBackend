@model List<ResultConsultancyDto>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hizmetlerimiz İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hizmet Bilgileri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hizmet ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Hizmet Adı</th>
									<th scope="col">Hizmet Açıklaması</th>
									<th scope="col">Resim Yolu</th>									
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ConsultancyId</td>
										<td>@item.ConsultancyTitle</td>
										<td>@item.ConsultancyContent</td>
										<td>@item.ImageUrl</td>										
										<td><a href="/Consultancy/DeleteConsultancy/@item.ConsultancyId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Consultancy/UpdateConsultancy/@item.ConsultancyId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}

							</tbody>
						</table>
						<a href="/Consultancy/CreateConsultancy/" class="btn btn-outline-primary"> Yeni Hizmet Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

