@model UpdateArticleDto
@{
    ViewData["Title"] = "UpdateArticle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">MAKALE İŞLEMLERİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Makale  Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="ArticleId" />
							<div class="form-group">
								<label for="ArticleTitle">Makale Başlığı Giriniz</label>
								<input type="text" class="form-control" id="imageUrl" asp-for="ArticleTitle">
							</div>
							<div class="form-group">
                                <label for="ArticleImageUrl">Makale Foroğraf Linki Giriniz</label>
                                <input type="text" class="form-control" id="imageUrl" asp-for="ArticleImageUrl">
							<div class="form-group">
								<label for="title">Makale İçeriğini Giriniz</label>
								<input type="text" class="form-control" id="title" asp-for="ArticleContent">
							</div>				
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Makale Güncelle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>

