@model guneshukuk.WebUI.Dtos.AboutDtos.UpdateAboutDto
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">HAKKIMIZDA İŞLEMLERİ</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Bilgi Güncelleme</div>
						</div>
						<div class="card-body">
							<input type ="hidden" asp-for ="AboutId"/>
							<div class="form-group">
								<label for="imageUrl">Resim Linki Giriniz</label>
								<input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="title">Başlık  Giriniz</label>
								<input type="text" class="form-control" id="title" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<input type="text" class="form-control" id="description" asp-for="Description">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Bilgisi Güncelle</button>

						</div>
					</div>
				</form>
			</div>


		</div>
	</div>
</div>

